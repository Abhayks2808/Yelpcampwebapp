<%- include ('../partials/header') %>
<div class="container mt-6">
    <div class="row">
        
        <div class="col-12 col-sm-12 ">
            <div class="card shadow border-0">
                <div class="card-body">
                    <h1 class="text-center">Edit  <%= campground.name %> </h1>
                    <p>
                        <small class="text-muted">Fields marked * are required.</small>
                      </p>                  
                    <form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Name*</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name="name" value="<%=campground.name %>" required>
                            <div class="invalid-feedback">
                                please provide a campground name
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Image url*</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name="image" value="<%= campground.image %>"  required>
                            <div class="invalid-feedback">
                                please provide a valid imageurl
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description*</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="3" required><%= campground.description %></textarea>
                            <div class="invalid-feedback">
                              Please provide a description of your campground.
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="exampleFormControlInput1">Price*</label>
                            <input type="number" class="form-control" id="exampleFormControlInput1" name="price" value="<%= campground.price %>" min="0.01" step="0.01" required>
                            <div class="invalid-feedback">
                                please provide price details
                            </div>
                        </div>
                    <button class="btn btn-block btn-dark" type="submit">submit</button>
                    
                    </form>
                </div>
               
            </div>
            
        </div>
       
    </div>
  
    
</div>


<%- include ('../partials/footer') %>